name: videocore
version: 0.1.0.0
synopsis: Haskell bindings for the VideoCore firmware used on the Raspberry Pi.
-- description:
homepage: https://github.com/Wollw/VideoCore-Haskell
license: MIT
license-file: LICENSE
author: David E. Shere
maintainer: david.e.shere@gmail.com
-- copyright:
category: System
build-type: Simple
cabal-version: >=1.8

library
  exposed-modules:    VideoCore, VideoCore.EGL, VideoCore.Raw
                        VideoCore.Raw.EGL, VideoCore.Raw.Interface.VMCSHost.Dispmanx,
                        VideoCore.Raw.Interface.VMCSHost.Dispmanx.Types,
                        VideoCore.Raw.Interface.VCTypes.ImageTypes,
                        VideoCore.Interface.VMCSHost.Dispmanx
                        VideoCore.Raw.EGL.Platform
                        VideoCore.Raw.GLES2 VideoCore.GLES2
  include-dirs:        include, /opt/vc/include, /opt/vc/include/interface/vmcs_host/linux, /opt/vc/include/interface/vcos/pthreads
  extra-lib-dirs:      /opt/vc/lib
  extra-libraries:     bcm_host, EGL, GLESv2
  build-depends:       base ==4.5.*, array
  hs-source-dirs:      src

executable VideocoreExample
  hs-source-dirs:   videocore-example
  main-is:          Main.hs
  build-depends:    base ==4.5.*, system-gpio, videocore, array
